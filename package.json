{
  "name": "snake-ai-arena",
  "version": "3.0.0",
  "description": "Competitive Snake AI coding challenge platform",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:client": "vite",
    "dev:server": "tsx watch server/index.ts",
    "build": "npm run build:client",
    "build:client": "vite build",
    "start": "tsx server/index.ts",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "db:seed": "tsx server/seed.ts",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:integration": "vitest run server/__tests__/integration.test.ts",
    "test:integration:run": "vitest run server/__tests__/integration.test.ts",
    "test:integration:docker": "./scripts/test-integration.sh",
    "docker:dev": "docker compose up",
    "docker:dev:build": "docker compose up --build",
    "docker:dev:down": "docker compose down",
    "docker:test": "docker compose -f docker-compose.test.yml up -d --build",
    "docker:test:down": "docker compose -f docker-compose.test.yml down -v",
    "precommit": "npm run lint && npm run test:run",
    "prepush": "npm run lint && npm run test:run && npm run test:e2e",
    "ci": "npm run lint && npm run test:coverage && npm run test:e2e"
  },
  "dependencies": {
    "@monaco-editor/react": "^4.6.0",
    "@react-three/drei": "^9.88.0",
    "@react-three/fiber": "^8.15.0",
    "@types/pg": "^8.15.6",
    "canvas-confetti": "^1.9.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "pg": "^8.16.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.0",
    "three": "^0.159.0",
    "tsx": "^4.20.6"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/canvas-confetti": "^1.6.4",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@types/supertest": "^6.0.3",
    "@types/three": "^0.159.0",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "@vitejs/plugin-react": "^4.2.0",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "eslint": "^8.53.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "jsdom": "^27.0.1",
    "playwright": "^1.57.0",
    "postcss": "^8.4.31",
    "supertest": "^7.1.4",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.2.2",
    "vite": "^5.0.0",
    "vitest": "^3.2.4"
  }
}
